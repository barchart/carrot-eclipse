<project default="maven" basedir="./..">

	<echo message="basedir : ${basedir}" />

	<target name="maven">
		<exec executable="mvn">
			<arg value="clean" />
			<arg value="install" />
			<arg value="--define" />
			<arg value="eclipse.p2.mirrors=false" />
			<arg value="--show-version" />
			<arg value="--update-snapshots" />
		</exec>
	</target>

</project>
